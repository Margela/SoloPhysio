<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:background="@drawable/remediesbck"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/remedieswelcome"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:paddingTop="11dp"
        android:paddingBottom="20dp"
        android:text="Remedies to try!"
        android:textAlignment="center"
        android:textColor="#32CD32"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="162dp"
        android:layout_height="124dp"
        android:layout_gravity="left"
        app:srcCompat="@drawable/winter" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you're suffering from swelling/bruising from your sprain, purchase some wintergreen and apply on the affected area in slow circular motions"
        android:textColor="#32CD32"
        android:textStyle="italic"
        />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="156dp"
        android:layout_height="149dp"
        android:layout_gravity="left"

        app:srcCompat="@drawable/pukka" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#32CD32"
        android:textStyle="italic"
        android:text="dealing with a sore ACL tear or just general knee pain? kick back and brew some ginger,lemon and honey tea from pukka, which contains healing properties such as muscle relief and general calamity." />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="162dp"
        android:layout_height="150dp"
        android:layout_gravity="left"
        app:srcCompat="@drawable/remedy1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:textStyle="italic"
        android:textColor="#32CD32"
        android:layout_height="66dp"
        android:text="Place this scented sheet on the lower crescent section on the back. Sit bac and enjoy the DEEP HEAT coursing through your painful muscles." />


</LinearLayout>
