<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="84dp"

            app:srcCompat="@drawable/logogogo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#5eabc9"
            android:textStyle="bold"
            android:paddingTop="11dp"
            android:paddingBottom="20dp"
            android:text= "                  Welcome to SoloPhysio!
                     select your exercise:" />

    <ImageView
            android:id="@+id/imageView7"
            android:layout_width="161dp"
            android:layout_height="135dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:srcCompat="@drawable/lowerback" />

        <Button
            android:id="@+id/backexercise"
            android:layout_width="315dp"
            android:layout_height="30dp"
            android:background="#5eabc9"
            android:textStyle="bold"
            android:text="@string/lower_back_exercises" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="161dp"
            android:layout_height="137dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:srcCompat="@drawable/strains" />

    <Button
            android:id="@+id/sprainexercise"
            android:layout_width="318dp"
            android:layout_height="35dp"
            android:background="#5eabc9"
            android:textStyle="bold"
            android:text="@string/exercises_for_sprains" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="164dp"
            android:layout_height="156dp"
            android:contentDescription="@string/exercises_for_sprains"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:srcCompat="@drawable/sprains" />

        <Button
            android:id="@+id/strainexercise"
            android:layout_width="321dp"
            android:layout_height="35dp"
            android:background="#5eabc9"
            android:textStyle="bold"
            android:text="@string/exercises_for_strains" />

</LinearLayout>


